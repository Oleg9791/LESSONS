{
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^0.12.92",
    "vimeo/psalm": "^4.8"
  },
  "scripts": {
